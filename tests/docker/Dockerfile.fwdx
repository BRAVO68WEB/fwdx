# Build fwdx binary from repo root (context must be repo root).
FROM golang:1.21-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -o fwdx .

FROM alpine:3.19
RUN apk add --no-cache ca-certificates openssl wget
COPY --from=builder /app/fwdx /usr/local/bin/fwdx
ENTRYPOINT ["fwdx"]
